<?xml version="1.0"?>
<robot name="arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="world"/>
  
  <joint name="world_base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="world"/>
    <child link="base_footprint"/>
  </joint>

  <link name="base_footprint" />
  <joint name="base_footprint_link_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <!-- <origin xyz="0 0 0" rpy="0 0 0" /> -->
    <parent link="base_footprint"/>
    <child link="main_base"/>
  </joint>
  <link name="main_base">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.6"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>
  <joint name="base_stick1_joint" type="revolute">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="main_base"/>
    <child link="stick1"/>
    <limit lower="-3.14" upper="3.14" effort="1000" velocity="5.0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="stick1">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="stick1_stick2_joint" type="revolute">
    <origin xyz="0.0 0.0 1" rpy="0.0 0.0 0.0"/>
    <parent link="stick1"/>
    <child link="stick2"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="5.0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="stick2">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>
  <joint name="stick2_stick3_joint" type="revolute">
    <origin xyz="0.0 0.0 1" rpy="0.0 0.0 0.0"/>
    <parent link="stick2"/>
    <child link="stick3"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="5.0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="stick3">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="stick3_stick4_joint" type="prismatic">
    <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0"/>
    <parent link="stick3"/>
    <child link="stick4"/>
    <limit lower="-0.5" upper="0.5" effort="1000" velocity="5.0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="stick4">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.15"/>
      </geometry>
      <material name="puple"/>
    </visual>
  </link>
</robot>