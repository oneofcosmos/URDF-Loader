<?xml version="1.0"?>
<robot name="arm">
  <link name="main_base">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.6"/>
      </geometry>
      <material name="grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="팔_회전" type="revolute">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="main_base"/>
    <child link="stick1"/>
    <limit lower="-3.14" upper="3.14" effort="1000" velocity="0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="stick1">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="white">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="팔_관절1" type="revolute">
    <origin xyz="0.0 0.0 1" rpy="0.0 0.0 0.0"/>
    <parent link="stick1"/>
    <child link="stick2"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="5.0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="stick2">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="white">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="팔_관절2" type="revolute">
    <origin xyz="0.0 0.0 1" rpy="0.0 0.0 0.0"/>
    <parent link="stick2"/>
    <child link="stick3"/>
    <limit lower="-1.57" upper="1.57" effort="1000" velocity="5.0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="stick3">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.2"/>
      </geometry>
      <material name="white">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="팔_길이조절" type="prismatic">
    <origin xyz="0.0 0.0 0.5" rpy="0.0 0.0 0.0"/>
    <parent link="stick3"/>
    <child link="stick4"/>
    <limit lower="-0.5" upper="0.5" effort="1000" velocity="5.0"/>
    <axis xyz="0 0 1"/>
  </joint>
  
  <link name="stick4">
    <visual>
      <origin xyz="0 0 0.5"/>
      <geometry>
        <cylinder length="1" radius="0.15"/>
      </geometry>
      <material name="white">
        <color rgba="0.8 0.8 0.8 1.0"/>
      </material>
    </visual>
  </link>
</robot>